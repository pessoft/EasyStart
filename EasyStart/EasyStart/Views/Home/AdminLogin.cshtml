<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link rel="shortcut icon" href="~/Images/favico.ico" type="image/x-icon">
    <title>Панель администратора</title>
    @Styles.Render("~/main/css")
    @Styles.Render("~/admin-login/css")
</head>
<body>
    <div class="wrapper">
        <div class="logo-img">
            <img src="~/Images/full-logo-pink.png" alt="Logo" />
        </div>
        <div class="login-form" id="login-form">
            <div class="header">
                Панель администратора
                <i class="fal fa-users-cog"></i>
            </div>
            <div class="group">
                <input required type="text" name="login" id="login" value="" autocomplete="off"/>
                <span class="bar"></span>
                <label>Логин</label>
            </div>
            <div class="group">
                <input required type="password" onkeydown="loginByEnter(event)" name="password" id="password" value="" autocomplete="off"/>
                <span class="bar"></span>
                <label>Пароль</label>
            </div>
            <button class="btn btn-submit" id="action-login" onclick="login();">
                Войти
            </button>
        </div>
        <p>Для входа используйте логин: login, пароль: password</p>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/main")
    @Scripts.Render("~/bundles/notify")
    @Scripts.Render("~/bundles/admin-login")
</body>
</html>
