<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link rel="shortcut icon" href="~/Images/favico.ico" type="image/x-icon">
    <title>Панель администратора</title>
    @Styles.Render("~/timepicker/css")
    @Styles.Render("~/odometer/css")
    @Styles.Render("~/main/css")
    @Styles.Render("~/admin-panel/css")
    @Styles.Render("~/sumoselect/css")
    @Styles.Render("~/dragula/css")
    @Styles.Render("~/datepicker/css")
    @Styles.Render("~/promotion/css")
</head>
<body>
    <script>
        var AreaDelivery = JSON.parse(@Html.Raw(Json.Encode(ViewBag.AreaDeliveris)))
        var ProductsForPromotion = JSON.parse(@Html.Raw(Json.Encode(ViewBag.ProductsForPromotion)))
        var CategoryDictionary = JSON.parse(@Html.Raw(Json.Encode(ViewBag.CategoryDictionary)))
        var IsValidSetting = @ViewBag.IsValidSetting.ToString().ToLower()
        var IsValidDeliverySetting = @ViewBag.IsValidDeliverySetting.ToString().ToLower()
    </script>
    <div class="header-menu">
        <div class="logo-img menu-item" target-id="about-us">
            <img src="~/Images/logo.png" alt="Logo" />
        </div>
        <div class="menu-item menu-item-active" target-id="order" onclick="loadOrders();">
            <i class="fal fa-shopping-basket"></i>
            Заказы
            <div class="order-count hide"></div>
        </div>
        <div class="menu-item" target-id="history" onclick="loadHistoryOrders()">
            <i class="fal fa-history"></i>
            История заказов
        </div>
        <div class="menu-item" target-id="products" onclick="loadProducts();">
            <i class="fal fa-cart-arrow-down"></i>
            Товары
        </div>
        <div class="menu-item" target-id="promotion" onclick="activePromotion();">
            <i class="fal fa-rocket"></i>
            Продвижение
        </div>
        <div class="menu-item" target-id="branch" onclick="loadBranchList();">
            <i class="fal fa-code-branch"></i>
            Отделения
        </div>
        <div class="menu-item" target-id="setting">
            <i class="fal fa-map-marker-alt"></i>
            Контакты отделения
        </div>
        <div class="menu-item" target-id="delivery">
            <i class="fal fa-truck-loading"></i>
            О доставке
        </div>
        <div class="menu-item" target-id="analytics">
            <i class="fal fa-analytics"></i>
            Аналитика
        </div>
        <div class="menu-item logout" onclick="logout()">
            <i class="fal fa-sign-out"></i>
            Выйти
        </div>
    </div>
    <input type="hidden" id="current-brnach" value="@ViewBag.CurrentBranch">
    <div class="content">
        <div class="section" id="order">
            <div class="order-wrapper-grid">
                <div class="order-settings">
                    <div class="setting-item">
                        <div class="additional-order-item search-input">
                            <div class="search-group">
                                <div class="search-group-item search-group-input">
                                    <input oninput="searchByOrderNumber('order')" placeholder="Введите номер заказа...">
                                </div>
                                <div class="search-group-item search-group-ico hide">
                                    <i class="fas fa-search"></i>
                                </div>
                            </div>
                        </div>
                        <div class="sm-font-size margin-top5">
                            поиск заказа
                        </div>
                    </div>

                    <div class="setting-item count-new-order">
                        <div class="bg-font-size font-weight-bold status-bar-value odometer odometer-theme-minimal"></div>
                        <div class="sm-font-size">новых заказов</div>
                    </div>
                    <div class="setting-item count-success-order">
                        <div class="bg-font-size font-weight-bold success-color status-bar-value odometer odometer-theme-minimal"></div>
                        <div class="sm-font-size">оформленно заказов</div>
                    </div>
                    <div class="setting-item count-cancel-order">
                        <div class="bg-font-size font-weight-bold fail-color status-bar-value odometer odometer-theme-minimal"></div>
                        <div class="sm-font-size">отменено заказов</div>
                    </div>
                    <div class="setting-item today-revenue-order">
                        <div class="bg-font-size font-weight-bold text-no-wrap status-bar-value odometer odometer-theme-minimal"></div>
                        <div class="sm-font-size">выручка (руб.)</div>
                    </div>
                </div>
                <div class="order-list-grid">
                </div>
            </div>
        </div>
        <div class="section hide" id="history">
            <div class="order-wrapper-grid">
                <div class="order-settings">
                    <div class="setting-item">
                        <div class="additional-order-item search-input">
                            <div class="search-group">
                                <div class="search-group-item search-group-input">
                                    <input oninput="searchByOrderNumber('history')" placeholder="Введите номер заказа...">
                                </div>
                                <div class="search-group-item search-group-ico hide">
                                    <i class="fas fa-search"></i>
                                </div>
                            </div>
                        </div>
                        <div class="sm-font-size margin-top5">
                            поиск заказа
                        </div>
                    </div>

                    <div class="setting-item order-history-period">
                        <i class="fal fa-calendar-alt bg-normal-font-size"></i>
                        <div class="additional-order-item datepicker-input">
                            <div>
                                <div class="group">
                                    <input readonly required id="order-history-period" class="default-color super-sm-font-size">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="setting-item count-success-order">
                        <div class="bg-font-size font-weight-bold success-color status-bar-value odometer odometer-theme-minimal">
                        </div>
                        <div class="sm-font-size">оформленно заказов</div>
                    </div>
                    <div class="setting-item count-cancel-order">
                        <div class="bg-font-size font-weight-bold fail-color status-bar-value odometer odometer-theme-minimal"></div>
                        <div class="sm-font-size">отменено заказов</div>
                    </div>
                    <div class="setting-item today-revenue-order">
                        <div class="bg-font-size font-weight-bold text-no-wrap status-bar-value odometer odometer-theme-minimal"></div>
                        <div class="sm-font-size">выручка (руб.)</div>
                    </div>
                </div>
                <div class="order-list-grid">
                </div>
            </div>
        </div>
        <div class="section hide" id="products">
            <div class="category">
                <div class="header-product">
                    <div class="header-product-text">
                        Категории
                        <i class="fal fa-layer-plus"></i>
                    </div>
                    <div class="header-product-add" id="add-category">
                        <i class="fal fa-plus"></i>
                        Добавить категорию
                    </div>
                </div>
                <div class="category-list" id="category-list">
                    <div class="empty-list">
                        <i class="fal fa-smile-plus"></i>
                        <span>Пока нет ни одной категории</span>
                    </div>
                </div>
            </div>
            <div class="product">
                <div class="header-product">
                    <div class="header-product-text">
                        Продукты
                        <i class="fal fa-gifts"></i>
                    </div>
                    <div class="header-product-add" id="add-product">
                        <i class="fal fa-plus"></i>
                        Добавить продукт
                    </div>

                    <div class="header-product-add hide" id="add-product-constructor">
                        <i class="fal fa-plus"></i>
                        Добавить категорию ингредиентов
                    </div>
                </div>
                <div class="product-list" id="product-list">
                    <div class="empty-list">
                        <i class="fal fa-smile-plus"></i>
                        <span>Выберите категорию и добавте продукт</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="section hide" id="promotion">
            <div class="section-grid-wrapper promotion-grid-wrapper">
                <div class="section-content promotion-section">
                    <div class="promotion-menu">
                        <ul>
                            <li target-id="pormotion-stock" class="promotion-menu-active"><i class="fal fa-badge-percent"></i> Акции</li>
                            <li target-id="pormotion-coupons"><i class="fal fa-gift-card"></i> Купоны</li>
                            <li target-id="pormotion-cashback-partners"><i class="fal fa-hands-usd"></i> Кешбек и Партнерская программа</li>
                            <li target-id="pormotion-push-notification"><i class="fal fa-paper-plane"></i> PUSH сообщения</li>
                            <li target-id="promotion-settings"><i class="fal fa-sliders-v"></i> Настройка</li>
                        </ul>
                    </div>
                    <div class="promotion-content-wrapper">
                        <div id="pormotion-stock" class="promotion-content promotion-some-settings">
                            <div class="promotion-some-settings-header">
                                <button id="btn-add-stock" class="promotion-btn-settings-add" onclick="StockManger.addNewStock()">
                                    <i class="fal fa-plus"></i>
                                    Добавить акцию
                                </button>
                            </div>
                            <div id="stock-list" class="promotion-some-settings-content">
                                <div class="empty-list">
                                    <i class="fal fa-smile-plus"></i>
                                    <span>Добавте акции</span>
                                </div>
                            </div>
                        </div>
                        <div id="pormotion-coupons" class="promotion-content promotion-some-settings hide">
                            <div class="promotion-some-settings-header">
                                <button id="btn-add-coupons" class="promotion-btn-settings-add" onclick="CouponManager.addNewCoupon()">
                                    <i class="fal fa-plus"></i>
                                    Добавить купон
                                </button>
                            </div>
                            <div id="coupon-list" class="promotion-some-settings-content promotion-coupon-list-container">
                                <div class="empty-list">
                                    <i class="fal fa-smile-plus"></i>
                                    <span>Добавте купоны</span>
                                </div>
                            </div>
                        </div>
                        <div id="pormotion-cashback-partners" class="pormotion-cashback-partners promotion-content hide">
                            <div class="cashback-partners-content" id="promotion-cashback-bonus">
                                <h2>Кешбек</h2>
                                <div class="cashback-partners-item">
                                    <div class="checkbox-item checkbox-item-left">
                                        <input id="toggle-cashback-bonus" type="checkbox" onchange="CashbackPartners.toggleCashbackBonus()" />
                                        <label for="toggle-cashback-bonus">Использовать кешбек</label>
                                    </div>
                                    <div class="row">
                                        <div class="group">
                                            <input required disabled type="number" min="0" max="100" oninput="CashbackPartners.onChangeCashbackBonusPersentValue()" autocomplete="off" id="cashback-bonus-return" value="10" />
                                            <span class="bar"></span>
                                            <label>Возвращаемый процент</label>
                                        </div>
                                        <div class="group">
                                            <input required disabled type="number" min="0" max="100" oninput="CashbackPartners.onChangeCashbackBonusPersentValue()" autocomplete="off" id="payment-cashback-bonus" value="40" />
                                            <span class="bar"></span>
                                            <label>Оплата кешбеком до (%)</label>
                                        </div>
                                    </div>
                                    <div class="cashback-partners-item-footer">
                                        <button id="save-cashback-bonus-setting" class="btn btn-submit" onclick="CashbackPartners.saveCashbackSetting()">Сохранить</button>
                                    </div>
                                </div>
                            </div>

                            <div class="cashback-partners-content" id="promotion-partners">
                                <h2>Партнерская программа</h2>
                                <div class="cashback-partners-item">
                                    <div class="checkbox-item checkbox-item-left">
                                        <input id="toggle-partners" type="checkbox" onchange="CashbackPartners.togglePartners()" />
                                        <label for="toggle-partners">Использовать партнёрскую программу</label>
                                    </div>
                                    <div class="row">
                                        <div class="group">
                                            <input required disabled type="number" min="0" max="100" autocomplete="off" oninput="CashbackPartners.onChangePaymentCashbackBonusValue()" id="partner-cashback-bonus" value="20" />
                                            <span class="bar"></span>
                                            <label>Кешбек с заказа реферала (%)</label>
                                        </div>
                                        <div class="checkbox-item checkbox-item-left">
                                            <input id="partner-cashback-once" type="checkbox" onchange="CashbackPartners.togglePartners()" checked />
                                            <label for="partner-cashback-once">Единоразовый кешбек за реферала</label>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <select id="partner-cashback-type" class="cashback-partners-type" disabled onchange="CashbackPartners.onChangePaymentCashbackBonusValue()">
                                            <option value="1">Единоразовая скидка в %</option>
                                            <option value="2">Единорозовый бунус в руб.</option>
                                        </select>
                                        <div class="group">
                                            <input disabled required type="number" min="0" autocomplete="off" oninput="CashbackPartners.onChangePaymentCashbackBonusValue()" id="partner-cashback-bonus-return" value="20" />
                                            <span class="bar"></span>
                                            <label>Размер бонуса</label>
                                        </div>
                                    </div>
                                    <div class="cashback-partners-item-footer">
                                        <button id="save-partner-setting" class="btn btn-submit" onclick="CashbackPartners.savePartnerSetting()">Сохранить</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div id="pormotion-push-notification" class="promotion-content promotion-push-notification hide">
                            <div class="wizard-push-notification">
                                <div class="max-container hide" id="container-collapse-edit-new-push-msg">
                                    <button id="show-edit-new-push-msg" class="simple-text-button push-background-color" onclick="HistoryNotification.showEditNewMessage()">
                                        Создать PUSH уведомление
                                        <i class="fal fa-comment-alt-lines"></i>
                                    </button>
                                </div>
                                <div class="wizard-push-notification-item push-notification-constructor">
                                    <span class="wizard-push-notification-item-header">
                                        Уведомление
                                        <span id="push-notification-limit"></span>
                                    </span>
                                    <div class="wizard-push-notification-item-body">
                                        <div class="group wizard-push-title-group">
                                            <input required type="text" autocomplete="off" id="push-title" oninput="PreviewDevice.onInputMessageTitle(this)" />
                                            <span class="bar"></span>
                                            <label>Заголовок сообщения</label>
                                        </div>
                                        <div class="group wizard-push-body-group">
                                            <textarea id="push-body" placeholder="Введите текст уведомления" oninput="PreviewDevice.onInputMessageBody(this)"></textarea>
                                            <span class="bar"></span>
                                            <label>Текст сообщения</label>
                                        </div>
                                        <div class="push-image-container">
                                            <div class="push-image">
                                                <button id="push-image-btn-remove" class="push-image-btn-remove hide" onclick="PushNotitifactionImage.removeImage()">
                                                    <i class="fal fa-times"></i>
                                                </button>
                                                <img id="push-notification-image-preview" src="/images/default-image.jpg" />
                                            </div>
                                            <div class="push-image-menu">
                                                <input type="file" id="push-image-download" class="not-bind-image hide" accept="image/*">
                                                <span>Изображение уведомления (необязательно)</span>
                                                <button id="push-image-btn-download" class="push-image-btn-download" onclick="openDialogFile('push-image-download')">
                                                    Загрузить
                                                    <i class="fal fa-arrow-from-bottom"></i>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="push-target-setting">
                                            <div class="promotion-item-setting-body">
                                                <span>Действие по нажатию на PUSH</span>
                                                <select id="push-actions" onchange="NotificationAction.onChangeAction(this); PushDataHandler.toggleBtnSave()">
                                                    <option value="0">Открыть приложение</option>
                                                    <option value="1">Открыть категорию товаров</option>
                                                    <option value="2">Открыть информацию о товаре</option>
                                                    <option value="3">Открыть информацию об ацкии</option>
                                                    <option value="4">Открыть страницу партнёрской программы</option>
                                                    <option value="5">Открыть страницу кешбека</option>

                                                </select>
                                                <select id="push-additional-action" class="push-additional-action"></select>
                                            </div>
                                        </div>
                                        <div class="push-menu">
                                            <button id="send-new-push-message" class="btn btn-submit">Отправить</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="wizard-push-notification-item">
                                    <span class="wizard-push-notification-item-header">Предпросмотр устройства</span>
                                    <div class="wizard-push-notification-item-body wizard-push-device-preview">
                                        <div class="preview-device-description">
                                            <span>
                                                Посмотрите, как сообщение будет выглядеть на мобильных устройствах. У пользователей разных устройств сообщение может выглядеть по-разному.
                                            </span>
                                        </div>

                                        <div class="wrap-device-preview">
                                            <div class="device-preview-container">
                                                <div class="device-preview android"></div>
                                                <div class="preview-push-container-android">
                                                    <div class="preview-msg-body">
                                                        <p class="preview-msg-title">Заголовок сообщения</p>
                                                        <p class="preview-msg-body-text">Текст сообщения</p>
                                                    </div>
                                                    <div class="preview-msg-image">
                                                        <div class="preview-msg-image-device">
                                                            <img src="/images/default-image.jpg" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <span>Android</span>
                                        </div>
                                        <div class="wrap-device-preview">
                                            <div class="device-preview-container">
                                                <div class="device-preview ios"></div>
                                                <div class="preview-push-container-ios">
                                                    <div class="preview-msg-body">
                                                        <p class="preview-msg-title">Заголовок сообщения</p>
                                                        <p class="preview-msg-body-text">Текст сообщения</p>
                                                    </div>
                                                    <div class="preview-msg-image">
                                                        <div class="preview-msg-image-device">
                                                            <img src="/images/default-image.jpg" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <span>ios</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="history-push-notitification">
                                <div class="max-container" id="container-collapse-history-push-msg">
                                    <button id="history-push-download" class="history-push-download push-background-color" onclick="HistoryNotification.showHistory()">
                                        Показать историю PUSH сообщений
                                        <i class="fal fa-history"></i>
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div id="promotion-settings" class="promotion-content promotion-settings promotion-some-settings hide">
                            <div class="promotion-setting">
                                <h2>Баннер из акций</h2>
                                <div class="checkbox-item">
                                    <input type="checkbox" id="toggle-stock-banner">
                                    <label for="toggle-stock-banner">
                                        Показывать баннер
                                    </label>
                                </div>
                            </div>
                            <div id="promotion-section-setting" class="promotion-setting">
                                <h2>Приорит разделов</h2>
                                <div id="promotion-items-priority" class="promotion-items-priority">
                                    <div class="promotion-item-setting" promotion-section="8" promotion-setting-id="-1">
                                        <i class="fal fa-hands-usd"></i>
                                        <div class="promotion-item-setting-body">
                                            <span>Партнерская программа</span>
                                            <select multiple onchange="PromotionSetting.onChangeIntesections(this)">
                                                <option value="2">Акции</option>
                                                <option value="4">Купоны</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="promotion-item-setting" promotion-section="4" promotion-setting-id="-1">
                                        <i class="fal fa-gift-card"></i>
                                        <div class="promotion-item-setting-body">
                                            <span>Купоны</span>
                                            <select multiple onchange="PromotionSetting.onChangeIntesections(this)">
                                                <option value="2">Акции</option>
                                                <option value="8">Партнерская программа</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="promotion-item-setting" promotion-section="2" promotion-setting-id="-1">
                                        <i class="fal fa-badge-percent"></i>
                                        <div class="promotion-item-setting-body">
                                            <span>Акции</span>
                                            <select multiple onchange="PromotionSetting.onChangeIntesections(this)">
                                                <option value="4">Купоны</option>
                                                <option value="8">Партнерская программа</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <button id="save-promotion-setting" class="btn btn-submit" onclick="PromotionSetting.saveSettings()">Сохранить</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="section hide" id="branch">
            <div class="branch-header">
                Отделения
                <i class="fal fa-chart-network"></i>
            </div>
            @if (ViewBag.TypeBranch == EasyStart.Logic.TypeBranch.MainBranch)
            {
                <div class="branch-header-add" id="add-branch">
                    <i class="fal fa-plus"></i>
                    Добавить отделение
                </div>
            }
            <div class="branch-list">
            </div>
        </div>

        <div class="section hide" id="setting" setting-id="@(ViewBag.Setting != null ? ViewBag.Setting.Id : 0)">
            <div class="section-wrapper">
                <div class="setting-block">
                    <div class="setting-header">
                        Адрес
                        <i class="fal fa-map-marker-alt"></i>
                    </div>
                    <div class="setting-content">
                        <div class="group">
                            <input required autocomplete="off" list="setting-city-list" id="setting-city" value="@(ViewBag.Setting != null ? ViewBag.Setting.City : "")" type="text">
                            <datalist id="setting-city-list">
                                @foreach (var cityPair in ViewBag.City)
                                {
                                    <option city-id="@cityPair.Key" value="@cityPair.Value" />
                                }
                            </datalist>
                            <span class="bar"></span>
                            <label>Город</label>
                        </div>
                        <div class="group">
                            <input required type="text" autocomplete="off" id="setting-street" value="@(ViewBag.Setting != null ? ViewBag.Setting.Street : "")" />
                            <span class="bar"></span>
                            <label>Улица</label>
                        </div>
                        <div class="group">
                            <input required type="text" autocomplete="off" id="setting-home" value="@(ViewBag.Setting != null && ViewBag.Setting.HomeNumber!= 0 ? ViewBag.Setting.HomeNumber : "")" />
                            <span class="bar"></span>
                            <label>Номер дома(офиса)</label>
                        </div>
                    </div>
                </div>
                <div class="setting-block">
                    <div class="setting-header">
                        Контакты
                        <i class="fal fa-address-card"></i>
                    </div>
                    <div class="setting-content">
                        <div class="group">
                            <input autocomplete="off" type="text" required id="setting-phone-number" value="@(ViewBag.Setting != null ? ViewBag.Setting.PhoneNumber : "")" />
                            <span class="bar"></span>
                            <label>Телефон 1</label>
                        </div>
